<!DOCTYPE HTML>
<html>
<head>
    <meta charset="utf-8">
    <title>{% block title %}Reuzze{% endblock %}</title>
    <link rel="shortcut icon" type="image/x-icon" href="{{ asset('bundles/reuzzereuzze/images/favicon.ico') }}">

    <link rel="stylesheet" href="{{ asset('bundles/reuzzereuzze/css/libraries/smoothness/jquery-ui-1.10.3.custom.min.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/reuzzereuzze/css/libraries/bootstrap/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/reuzzereuzze/css/base.css') }}">
    <script src="{{ asset('bundles/reuzzereuzze/js/libraries/jquery-1.10.2.min.js') }}"></script>
    <script src="{{ asset('bundles/reuzzereuzze/js/libraries/bootstrap/bootstrap.min.js') }}"></script>

</head>

<body>

{% block header %}
    <header class="page-header">
        <div class="container">
            <nav class="navbar navbar-default" role="navigation">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <a class="navbar-brand" href="{{ path('reuzze_reuzze_homepage') }}"><img id="logo" src="{{ asset('bundles/reuzzereuzze/images/ReUzze_Logo.png') }}" alt="logo"></a>
                </div>
                <ul class="nav navbar-nav navbar-right">
                {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                    <li><a href="{{ path('reuzze_reuzze_entitycreatepage') }}">Place item</a></li>
                    <!--<li><a href="{# path('reuzze_reuzze_editaccountpage') #}">Edit account</a></li>-->
                    <li><a href="{{ path('reuzze_reuzze_logoutpage') }}">Logout</a></li>
                    {% else %}
                        <li><a href="{{ path('reuzze_reuzze_loginpage') }}">Login</a></li>
                        <li><a href="{{ path('reuzze_reuzze_registerpage') }}">Registreer</a></li>
                {% endif %}
                </ul>
            </nav>
        </div>
    </header>
{% endblock header %}

{% block navigation %}
    <nav class="navbar navbar-default1">
        <div class="container">
            <ul class="nav navbar-nav">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Categorie <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        {% for name, category in categories %}
                            <li>{{ name }}</li>
                            <ul>
                                {% for key, string in category %}
                                    <li><a href="{{ key }}">{{ string }}</a></li>
                                {% endfor %}
                            </ul>
                        {% endfor  %}
                    </ul>
                    <li><a href="#">Meer zoekopties</a></li>
                </li>
            </ul>
            <form class="navbar-form navbar-left" role="search">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Geef een zoekterm in">
                </div>
                <button type="submit" class="btn btn-default">Zoeken</button>
            </form>
        </div>
    </nav>
{% endblock navigation %}

{# hierna komt het block met de naam 'content' #}
    <div class="container">
        {% block content %}{% endblock %}
        <div id="push"></div>
    </div>

{% block footer %}
    <footer class="panel-footer">
        <div class="container">
            <p class="navbar-text">Arteveldehogeschool project reuzze Copyright &#169; Niels Vroman & Gilles Vanpeteghem</p>
        </div>
    </footer>
{% endblock footer %}

<script src="http://maps.google.com/maps/api/js?sensor=false"></script>
<script src="{{ asset('bundles/reuzzereuzze/js/libraries/jquery-ui-1.10.3.custom.min.js') }}"></script>
<script src="{{ asset('bundles/reuzzereuzze/js/libraries/jquery-ui-timepicker-addon.js') }}"></script>
<script src="{{ asset('bundles/reuzzereuzze/js/libraries/jquery.ui.widget.js') }}"></script>
<script src="{{ asset('bundles/reuzzereuzze/js/libraries/jquery.iframe-transport.js') }}"></script>
<script src="{{ asset('bundles/reuzzereuzze/js/libraries/jquery.fileupload.js') }}"></script>
<script src="{{ asset('bundles/reuzzereuzze/js/libraries/page.js') }}"></script>
</body>
</html>