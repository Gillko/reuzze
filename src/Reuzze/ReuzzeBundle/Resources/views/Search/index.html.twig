{% extends 'ReuzzeReuzzeBundle::layout.html.twig' %}

{% block content %}
    <div class="fixed categoriessidebar">  <!-- we want this div to be fixed width -->
        <legend><i id="yellow"></i>CATEGORIES</legend>
        <ul>
        {% for name, category in categories %}
            <li>{{ name }}</li>
            <ul>
                {% for key, string in category %}
                    <li><a href="{{ path('reuzze_reuzze_categoryentitiespage', {'category_id': key }) }}">{{ string }}</a></li>
                {% endfor %}
            </ul>
        {% endfor  %}
        </ul>
    </div>
    <section id="content">
        <div class="wrap">
            <form novalidate="novalidate" id="form-Search" method="post">
                <fieldset>
                    <legend>Search</legend>
                    <dl>
                        <dd class="form-group">
                            {{ form_row (form.entityTitle, { 'attr': {'class': 'form-control'} }) }}
                            {{ form_errors(form.entityTitle) }}
                        </dd>

                        <dd class="form-group">
                            {{ form_row (form.category.categoryName, { 'attr': {'class': 'form-control'} }) }}
                            {{ form_errors (form.category.categoryName) }}
                        </dd>
                        <dd class="form-group">
                            {{ form_row (form.region.regionName, { 'attr': {'class': 'form-control'} }) }}
                            {{ form_errors (form.region.regionName) }}
                        </dd>
                        <input class="btn btn-primary" name="" type="submit" value="Search Entities!">
                    </dl>
                </fieldset>
                {{ form_rest(form)}}
            </form>
        </div>
    </section>
{% endblock %}