{% extends 'ReuzzeReuzzeBundle::layout.html.twig' %}

{% block content %}
    <div class="fixed">
        <legend><i id="yellow"></i>CATEGORIES</legend>
        {% for category in categories %}
            <p><a href="">{{ category.categoryName }}</a></p>
        {% endfor  %}
    </div>
    <div class="hero-unit filler">
        <form novalidate="novalidate" id="form-Register" method="post">
            <fieldset>
                <legend><i id="yellow"></i>Personalia</legend>
                <dl>
                    <dd class="form-group">
                        {{ form_row (form.person.personFirstname, { 'attr': {'class': 'form-control', 'autocomplete': 'off'} }) }}
                        {{ form_errors (form.person.personFirstname) }}
                    </dd>
                    <dd class="form-group">
                        {{ form_row (form.person.personSurname, { 'attr': {'class': 'form-control', 'autocomplete': 'off'} }) }}
                        {{ form_errors (form.person.personSurname) }}
                    </dd>
                </dl>
            </fieldset>
            <fieldset>
                <legend><i id="yellow"></i>Address</legend>
                <a class="btn btn-primary" id="use_curr_location">Use current location</a>
                <dl>
                    {{ form_row (form.person.address.addressLat, { 'attr': {'class': 'hidden latitude'} }) }}
                    {{ form_row (form.person.address.addressLon, { 'attr': {'class': 'hidden longitude'} }) }}

                    <dd class="form-group">
                        {{ form_row (form.person.address.addressStreet, { 'attr': {'class': 'form-control street', 'autocomplete': 'off'} }) }}
                        {{ form_errors (form.person.address.addressStreet) }}
                    </dd>
                    <dd class="form-group">
                        {{ form_row (form.person.address.addressCity, { 'attr': {'class': 'form-control city', 'autocomplete': 'off'} }) }}
                        {{ form_errors (form.person.address.addressCity) }}
                    </dd>
                    <dd class="form-group">
                        {{ form_row (form.person.address.addressStreetnr, { 'attr': {'class': 'form-control streetnumber', 'autocomplete': 'off'} }) }}
                        {{ form_errors (form.person.address.addressStreetnr) }}
                    </dd>
                    <dd class="form-group">
                        {{ form_row (form.person.address.region.regionName, { 'attr': {'class': 'form-control region'} }) }}
                        {{ form_errors (form.person.address.region.regionName) }}
                    </dd>
                </dl>
            </fieldset>
            <fieldset>
                <legend><i id="yellow"></i>Account</legend>
                <dl>
                    <dd class="form-group">
                        {{ form_row (form.username, { 'attr': {'class': 'form-control', 'autocomplete': 'off'} }) }}
                    </dd>
                    <dd class="form-group">
                        {{ form_row (form.userEmail, { 'attr': {'class': 'form-control', 'autocomplete': 'off'} }) }}
                    </dd>
                    <dd class="form-group">
                        {{ form_row (form.password, { 'attr': {'class': 'form-control'} }) }}
                    </dd>
                </dl>
            </fieldset>
            {{ form_rest(form)}}
            <p><input class="btn btn-primary" name="" type="submit" value="Registreer mij!"></p>
        </form>
    </div>

{% endblock %}